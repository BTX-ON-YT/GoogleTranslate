{
    "compilerOptions": {
        "target": "es6",
        "outDir": "dist",
        "rootDir": "./",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "removeComments": true,
        "declaration": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true
    },
    "exclude": [
        "dist",
        "test",
    ],
    "typedocOptions": {
        "entryPoints": ["index.ts"],
        "out": "docs",
        "entryPointStrategy": "expand",
        "readme": "README.md"
    },
}